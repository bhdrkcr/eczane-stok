@model WebProjeleri2022.Pages.AdminModel
@{
}
<form class="row justify-content-center mb-3" asp-page-handler="GetProjectbyID" method="post">
    <div class="col-auto">
        <input class="form-control" asp-for="SearchId" type="number" min="0">
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Ara</button>
        <button type="submit" class="btn btn-primary" asp-page-handler="Clear">Temizle</button>
    </div>
</form>

<form asp-page-handler="Form" method="post">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Takim ID</label>
            <input type="text" class="form-control" asp-for="proje.id" readonly="True">
        </div>
        <div class="col-md-6">
            <label class="form-label">Takim Adi</label>
            <input type="text" class="form-control" asp-for="proje.name">
        </div>
        <div class="col-12">
            <label class="form-label">Takim Detayi</label>
            <input type="text" class="form-control" asp-for="proje.description">
        </div>
        <div class="col-12">
            <label class="form-label">Baglanti</label>
            <input type="text" class="form-control" asp-for="proje.url">
        </div>
         <div class="col-12">
            <label class="form-label">Takim Uyeleri</label>
            <textarea class="form-control" rows="6" asp-for="Memberlist"></textarea>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Ekle/Guncelle</button>
            <button type="submit" class="btn btn-primary" asp-page-handler="DeletebyID">Sil</button>
        </div>
    </div>
</form>
